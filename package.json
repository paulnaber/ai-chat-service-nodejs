{
  "name": "ai-chat-service-nodejs",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node build/src/index.js",
    "dev": "npm run tsoa && npm run tsc && node build/src/index.js",
    "dev:watch": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "dev:logs": "npm run dev | tee server.log",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "tsoa": "tsoa spec-and-routes",
    "tsc": "tsc --outDir build --experimentalDecorators",
    "test:e2e": "docker compose --env-file .env.test up -d && sleep 3 && dotenv -e .env.test -- drizzle-kit migrate && sleep 3 && dotenv -e .env.test -- jest",
    "test:e2e:cleanup": "docker compose down"
  },
  "author": "Paul Naber",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.8",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.5",
    "jest": "^29.7.0",
    "jwks-rsa": "^3.1.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsoa": "6.6.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "@tsoa/runtime": "^6.6.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "express": "^4.21.2",
    "express-prom-bundle": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5",
    "prom-client": "^15.1.3",
    "tsc-watch": "^6.0.4",
    "vite": "^5.4.9"
  }
}
